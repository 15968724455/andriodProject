<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingTop="15dp"
              android:paddingRight="10dp"
              android:paddingBottom="10dp">

    <EditText
            android:id="@+id/ed_calculator_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/white"
            android:gravity="right|bottom"
            android:textSize="20sp" />

    <TextView
            android:id="@+id/tv_calculator_result"
            android:textSize="20sp"
            android:textColor="#333"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_calculator_clear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/whitetogray"
                    android:gravity="center"
                    android:text="C"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_del"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/whitetogray"
                    android:gravity="center"
                    android:text="Del"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_plus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/whitetogray"
                    android:gravity="center"
                    android:text="＋"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_multiply"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/whitetogray"
                    android:gravity="center"
                    android:text="×"
                    android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_calculator_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="7"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="8"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="9"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_subtract"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="－"
                    android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/btn_calculator_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="4"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="5"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="6"
                    android:textSize="20sp" />

            <Button
                    android:id="@+id/btn_calculator_divide"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/whitetogray"
                    android:text="÷"
                    android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/btn_calculator_1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/whitetogray"
                            android:text="1"
                            android:textSize="20sp" />

                    <Button
                            android:id="@+id/btn_calculator_2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/whitetogray"
                            android:text="2"
                            android:textSize="20sp" />

                    <Button
                            android:id="@+id/btn_calculator_3"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/whitetogray"

                            android:text="3"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/btn_calculator_0"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/whitetogray"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="20sp" />

                    <Button
                            android:id="@+id/btn_calculator_point"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/whitetogray"
                            android:gravity="center"
                            android:text="."
                            android:textStyle="bold"
                            android:textSize="20sp" />

                </LinearLayout>


            </LinearLayout>

            <Button
                    android:id="@+id/btn_calculator_equal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/greentodarkgreen"
                    android:gravity="center"
                    android:text="="
                    android:textColor="#fff"
                    android:textSize="20sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
